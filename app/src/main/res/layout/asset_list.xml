<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="355dp"
    android:layout_height="197dp"
    android:layout_marginLeft="27dp"
    android:layout_marginTop="18dp"
    android:elevation="20dp"
    android:orientation="horizontal"
    android:outlineAmbientShadowColor="#00000029"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/ast_list_nm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="28dp"
            android:text="자산상세명"
            android:textColor="#111111"
            android:textSize="26sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ast_list_cd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ast_list_nm"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="19dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="41dp"
                android:text="자산번호"
                android:textColor="#666666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/ast_cd_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1010011-101"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ast_list_cd"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="사용자"
                android:textColor="#666666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/empe_nm_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조영재"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <view
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/ast_buttons"
            android:background="#FFDDDDDD"></view>

        <LinearLayout
            android:id="@+id/ast_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/repair_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:text="보수신청"
                android:textColor="#999999" />

            <view
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FFDDDDDD"></view>

            <Button
                android:id="@+id/return_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:text="반납신청"
                android:textColor="#999999" />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
