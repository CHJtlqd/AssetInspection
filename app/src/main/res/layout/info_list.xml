<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="311.64dp"
    android:layout_height="197dp"
    android:layout_marginLeft="27dp"
    android:layout_marginTop="18dp"
    android:elevation="20dp"
    android:orientation="horizontal"
    android:outlineAmbientShadowColor="#00000029"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:descendantFocusability="blocksDescendants">

        <RelativeLayout
            android:id="@+id/asset_ast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/asset_ast_nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자산상세명"
                android:textColor="#111111"
                android:textSize="26sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/asset_ast_cd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/asset_ast"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="자산번호"
                android:textColor="#666666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/asset_ast_dtl_cd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자산번호"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/asset_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/asset_ast_cd"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="사용자"
                android:textColor="#666666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/asset_empe_nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="조영재"
                android:textColor="#333333"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/asset_user"
            android:layout_marginTop="28dp"
            android:focusable="true"
            android:focusableInTouchMode="true">


            <Button
                android:id="@+id/btn_rwd_apl_yn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:text="보수신청"
                android:textColor="#999999"
                android:textSize="15sp" />


            <Button
                android:id="@+id/btn_return_yn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:text="반납신청"
                android:textColor="#999999"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
